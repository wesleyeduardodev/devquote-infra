# Copie para secrets.yaml e preencha com os valores reais
# secrets.yaml está no .gitignore e NÃO deve ser commitado

apiVersion: v1
kind: Secret
metadata:
  name: devquote-secrets
  namespace: devquote
type: Opaque
stringData:
  # Database
  POSTGRES_DB: devquote
  POSTGRES_USER: seu_usuario
  POSTGRES_PASSWORD: sua_senha_segura
  SPRING_DATASOURCE_URL: jdbc:postgresql://postgres-service:5432/devquote?sslmode=disable
  SPRING_DATASOURCE_USERNAME: seu_usuario
  SPRING_DATASOURCE_PASSWORD: sua_senha_segura

  # JPA/Hibernate
  SPRING_JPA_HIBERNATE_DDL_AUTO: update
  SPRING_JPA_SHOW_SQL: "false"

  # Security & JWT
  APP_JWTSECRET: sua_chave_jwt_base64
  SECURITY_ISSUER: https://devquote.com.br

  # CORS
  DEVQUOTE_CORS_ALLOWED_ORIGINS: https://devquote.com.br,http://devquote.com.br

  # Email
  DEVQUOTE_EMAIL_ENABLED: "true"
  DEVQUOTE_EMAIL_FROM: seu_email@gmail.com
  MAIL_HOST: smtp.gmail.com
  MAIL_PORT: "587"
  MAIL_USERNAME: seu_email@gmail.com
  MAIL_PASSWORD: sua_senha_app

  # AWS S3
  AWS_ACCESS_KEY_ID: sua_access_key
  AWS_SECRET_ACCESS_KEY: sua_secret_key
  AWS_S3_BUCKET_NAME: seu-bucket
  AWS_S3_REGION: us-east-1

  # Admin
  DEVQUOTE_ADMIN_EMAIL: admin@devquote.com
